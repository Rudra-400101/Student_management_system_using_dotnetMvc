
@{
    ViewBag.Title = "AddWorkshop";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<style>
    form {
        box-shadow: 2px 2px 10px grey;
    }
</style>

<form class="w-50 mx-auto my-5 border p-4 rounded" method="post">
    <h3 class="text-center my-3">Add Workshop <span class="text-danger">Here..!</span></h3>
    <label class="w-100">
        <b>Select Collage Name</b><br />
        <select class="form-control" name="collegename" required>
            <option disabled selected>--select Collage name--</option>
            @foreach(System.Data.DataRow dt in Model.Rows)
            {
                <option value="@dt["id"]">@dt["collegename"]</option>
            }
        </select>
    </label>
    <label class="w-100">
        <b>Date of Workshop</b>
        <input type="date" name="workshopdate" required class="form-control" />
    </label>
    <label class="w-100">
        <b>Remark (Optional)</b>
        <textarea rows="5" class="form-control" style="resize:none;" name="remark" placeholder="Write Somthing Here..."></textarea>
    </label>
    <input type="submit" value="Add Now" class="btn btn-primary font-weight-bold" />
</form>

