
@{
    ViewBag.Title = "AddTraining";
    Layout = "~/Views/Shared/GeneralLayout.cshtml";
}

<style>
    form {
        box-shadow: 2px 2px 10px grey;
    }
</style>

<form class="w-50 mx-auto my-5 border p-4 rounded" method="post">
    <h3 class="text-center my-3">Add Training Data <span class="text-danger">Here..!</span></h3>
    <label class="w-100">
        <b>Training Name</b><br />
        <input type="text" placeholder="Please Enter Training Name" required name="trainingname" class="form-control" />
    </label>
    <label class="w-100 my-2">
        <b>Training Code</b>
        <input type="text" placeholder="Please Enter Training Code" required name="trainingcode" class="form-control" />
    </label>
    <label class="w-100 my-2">
        <b>Training Fee</b>
        <input type="number" placeholder="Please Enter Training Fee" required name="trainingfee" class="form-control" />
    </label>
    <label class="w-100">
        <b>Year</b>
        <div class="d-flex justify-content-between w-100">
            <input type="number" placeholder="From" name="fromyear" required class="form-control mr-3" />
            <input type="number" placeholder="To" name="toyear" required class="form-control ml-3" />
        </div>
    </label>
    <input type="submit" value="Add Training" class="btn btn-primary font-weight-bold" />
    </form>